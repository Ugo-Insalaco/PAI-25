{
    "name": "question",
    "table" : "question",
    "fields": {
        "id": "auto-increment",
        "content": "mandatory updatable"
    },
    "primaryField": "id",
    "updatable" : [
        "content"
    ],
    "texts" : [
        "content"
    ],
    "include":[
        {
            "name": "solution_section",
            "default_inclusion": true,
            "bind":[
                {
                    "id":1,
                    "bindTable": "solution_question_section",
                    "local_key": "id",
                    "foreign_key": "id_question",
                    "proxy":[
                        {
                            "id": 2,
                            "endpoint": "solution",
                            "local_key": "id_solution",
                            "foreign_key": "id"
                        },
                        {
                            "id": 3,
                            "endpoint": "section",
                            "local_key": "id_section",
                            "foreign_key": "id"
                        }
                    ]
                }
            ]
        }
    ],
    "get_response":{
        "route": "/api/questions",
        "method" : "GET",
        "data":{
            "id":"{{0::question::id}}",
            "fields":{
                "content": "{{0::question::content}}"
            },
            "included":{
                "solution_section":{
                    "id_solution": "{{2::solution::id}}",
                    "name_solution": "{{2::solution::name}}",
                    "text_db_solution": "{{2::solution::text_db}}",
                    "picture_db_solution":"{{2::solution::picture_db}}", 
                    "problem_solution": "{{2::solution::problem}}", 
                    "arg_solution": "{{2::solution::arg}}", 
                    "id_section": "{{3::section::id}}", 
                    "name_section":"{{3::section::name}}", 
                    "logo_section":"{{3::section::logo}}",
                    "sous_texte_section":"{{3::section::sous_texte}}", 
                    "position_section":"{{3::section::position}}"
                }
            }
        }
        
    }
}
